<p id="notice"><%= notice %></p>

<h1>ToDoリスト一覧</h1>

<CENTER>
<table>
  <thead>
    <tr>
      <th>登録日</th>
      <th>タイトル</th>
      <th>内容</th>
      <th>締切期限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.date %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= book.limit %></td>
        <td><%= link_to '詳細', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</CENTER>
<br>

